<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRegister"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/parentRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_40"
                android:layout_marginLeft="@dimen/height_40"
                android:layout_marginRight="@dimen/height_40"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Register"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="Roboto"
                    android:layout_marginTop="@dimen/height_20"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Full Name"
                    android:layout_marginTop="@dimen/height_20"
                    >

                    <EditText
                        android:id="@+id/editTextName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textColorHighlight="@color/black"
                        android:fontFamily="Roboto"
                        >
                        <requestFocus />
                    </EditText>

                </com.google.android.material.textfield.TextInputLayout>

                <com.fredporciuncula.phonemoji.PhonemojiTextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Phone Number"
                    android:layout_marginTop="@dimen/height_20"
                    >

                    <com.fredporciuncula.phonemoji.PhonemojiTextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextPhone"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textColorHighlight="@color/black"
                        android:fontFamily="Roboto"
                        />

                </com.fredporciuncula.phonemoji.PhonemojiTextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email"
                    android:layout_marginTop="@dimen/height_20"
                    >

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="Roboto"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textColorHighlight="@color/black"
                        android:inputType="textEmailAddress"
                        >
                        <requestFocus />
                    </EditText>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Password"
                    android:layout_marginTop="@dimen/height_20"
                    >

                    <EditText
                        android:id="@+id/editTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textColorHighlight="@color/black"
                        android:fontFamily="Roboto"
                        >
                        <requestFocus />
                    </EditText>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:layout_marginTop="@dimen/height_20"
                    >

                    <EditText
                        android:id="@+id/editTextConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textColorHighlight="@color/black"
                        android:fontFamily="Roboto"
                        >
                        <requestFocus />
                    </EditText>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already a member ? Login"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/height_20"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="Roboto"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/height_20"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/button_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text="Login"
                        android:fontFamily="Roboto"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout"
                android:paddingTop="@dimen/height_40"
                android:paddingBottom="@dimen/height_40"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="Roboto"
                    android:textColor="@color/black"
                    android:text="Copyright &#169; 2021 De Albidar"
                    android:gravity="center"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </RelativeLayout>



    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>